<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.text.Text?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.calculadoraimc.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>
    <ImageView fitWidth="300" preserveRatio="true" fx:id="imatge">
        <Image url="https://play-lh.googleusercontent.com/t-3c75ddwdrvyMeDZu7EGgbq-fFxJSZLWNt69wvD-KS-rYm7RqTMNECue03yoA8X8xIq"/>
    </ImageView>
    <HBox alignment="CENTER">
        <Text text="Pes: "/>
        <TextField fx:id="pes"/>
        <Text text=" Kg"/>
    </HBox >
    <HBox alignment="CENTER">
        <Text text="Altura: "/>
        <TextField fx:id="altura"/>
        <Text text=" cm"/>
    </HBox>

    <Button text="Calcular" onAction="#calculate"/>

    <Label fx:id="resultatLabel"/>
    <Label fx:id="estatLabel"/>






</VBox>
